<% include ../layouts/header %>
<div class="row flex-column">
  <h1 class="text-center">Edit <%= campground.name %> </h1>
  <div class="align-self-center">
    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
      <div class="form-group row mt-3">
        <label for="name">Name</label>
        <input id="name" type="text" name="name" class="form-control" value="<%= campground.name %>">
      </div>
      <div class="form-group row ">
        <label for="image">Image</label>
        <input id="image" type="text" name="image" class="form-control" value="<%= campground.image %>">
      </div>
      <div class="form-group row ">
        <label for="description">Description</label>
        <textarea id="description" name="description" rows="3" class="form-control"><%= campground.description %></textarea>
      </div>
      <div class="form-group row">
        <label for="price">Price</label>
        <input id="price" type="number" name="price" class="form-control" value="<%= campground.price %>" min="0.01" step="0.01">
      </div>
      <div class="form-group row ">
        <button type="submit" class="btn btn-primary btn-block">Update!</button>
      </div>
    </form>
    <div class="row d-flex justify-content-center">
      <a href="/campgrounds" class="btn btn-primary" role="button">Go Back</a>
    </div>
  </div>
</div>

<% include ../layouts/footer %>
