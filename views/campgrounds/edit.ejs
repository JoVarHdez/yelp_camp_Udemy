<% include ../layouts/header %>
<div class="row flex-column">
  <h1 class="text-center">Edit <%= campground.name %> </h1>
  <div class="align-self-center">
    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
      <div class="form-group row mt-3">
        <input type="text" name="campground[name]" class="form-control" value="<%= campground.name %>">
      </div>
      <div class="form-group row ">
        <input type="text" name="campground[image]" class="form-control" value="<%= campground.image %>">
      </div>
      <div class="form-group row ">
        <textarea name="campground[description]" rows="3" class="form-control"><%= campground.description %></textarea>
      </div>
      <div class="form-group row ">
        <button type="submit" class="btn btn-primary btn-block">Submit</button>
      </div>
    </form>
    <div class="row d-flex justify-content-center">
      <a href="/campgrounds" class="btn btn-primary" role="button">Go Back</a>
    </div>
  </div>
</div>

<% include ../layouts/footer %>
