<% include ../layouts/header %>
<div class="row flex-column">
  <h1 class="text-center">Create a New Comment to <%= campground.name %></h1>
  <div class="align-self-center">
    <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
      <div class="form-group row mt-3">
        <input type="text" name="comment[author]" class="form-control" placeholder="Author...">
      </div>
      <div class="form-group row ">
        <input type="text" name="comment[text]" class="form-control" placeholder="Comment...">
      </div>
      <div class="form-group row ">
        <button type="submit" class="btn btn-primary btn-block">Submit</button>
      </div>
    </form>
    <div class="row d-flex justify-content-center">
      <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary" role="button">Go Back</a>
    </div>
  </div>
</div>

<% include ../layouts/footer %>
