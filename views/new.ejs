<% include layouts/header %>
<div class="row flex-column">
  <h1 class="text-center">Create a New Campground</h1>
  <div class="align-self-center">
    <form action="/campgrounds" method="POST">
      <div class="form-group row mt-3">
        <input type="text" name="name" class="form-control" placeholder="Name...">
      </div>
      <div class="form-group row ">
        <input type="text" name="image" class="form-control" placeholder="Image URL...">
      </div>
      <div class="form-group row ">
        <textarea name="description" rows="3" class="form-control" placeholder="Description..."></textarea>
      </div>
      <div class="form-group row ">
        <button type="submit" class="btn btn-primary btn-block">Submit</button>
      </div>
    </form>
    <div class="row d-flex justify-content-center">
      <a href="/campgrounds" class="btn btn-primary" role="button">Go Back</a>
    </div>
  </div>
</div>

<% include layouts/footer %>
